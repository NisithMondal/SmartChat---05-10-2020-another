<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_enabled="false"
        >
        <shape>
            <solid
                android:color="#6F7071"/>
            <corners
                android:radius="6dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="false"
        >
        <shape>
            <solid
                android:color="#DA2069"/>

            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:state_pressed="true"
        >
        <shape>
            <solid
                android:color="#B83F6E"/>

            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>
