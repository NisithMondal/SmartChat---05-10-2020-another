<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/online_state_image_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_green_dot_icon"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:src="@drawable/default_user_icon"
            />

        <TextView
            android:id="@+id/total_unread_message_text_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textColor="#ffffff"
            android:text="1"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/badge_shape"
            android:layout_toStartOf="@+id/user_name_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            />




        <TextView
            android:id="@+id/user_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image_view"
            android:layout_marginTop="22dp"
            android:text="Samaresh Mondal"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/last_message_date_text_view"
            android:textStyle="bold"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/last_message_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"
            />




        <TextView
            android:id="@+id/last_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profile_image_view"
            android:layout_below="@+id/user_name_text_view"
            android:layout_marginTop="5dp"
            android:textColor="#454343"
            android:textSize="15sp"
            android:layout_marginEnd="25dp"
            android:singleLine="true"
            android:layout_marginBottom="5dp"
            android:ellipsize="marquee"
            android:textStyle="normal"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>