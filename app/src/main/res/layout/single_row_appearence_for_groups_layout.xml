<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_profile_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            app:civ_border_color="#0A9EEF"
            app:civ_border_width="2dp"
            />

        <TextView
            android:id="@+id/group_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_profile_image_view"
            android:layout_marginTop="22dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:maxLines="1"
            />



        <TextView
            android:id="@+id/total_group_friends_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_profile_image_view"
            android:layout_below="@+id/group_name_text_view"
            android:layout_marginTop="2dp"
            android:textColor="#454343"
            android:textSize="17sp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:layout_marginBottom="5dp"
            android:textStyle="normal"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>