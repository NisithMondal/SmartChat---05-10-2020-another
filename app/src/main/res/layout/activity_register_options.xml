<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterOptionsActivity">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/app_toolbar"
        />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/create_account_with_email_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Create New Account"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/email_password_button_background"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_mail_icon"
        android:drawablePadding="15dp"
        />


    <Button
        android:id="@+id/google_signIn_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Sign Up With Google"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#0288D1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/google_signin_button_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_account_with_email_button"
        android:drawableStart="@drawable/google_logo"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/already_have_account_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an Account"
        android:textColor="#ee00aa"
        android:textSize="17sp"
        android:textAlignment="center"
        android:layout_below="@+id/google_signIn_button"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        />

</RelativeLayout>