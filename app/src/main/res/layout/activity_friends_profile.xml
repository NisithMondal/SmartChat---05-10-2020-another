<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsProfileActivity">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        android:background="@drawable/wallpaper2"
        />


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/app_toolbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:popupTheme="@style/Theme.AppCompat.Light"
                />

            <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/profile_image_view"
         android:layout_width="180dp"
         android:layout_height="180dp"
         android:src="@drawable/default_user_icon"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="150dp"
         />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/profile_image_view"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#04646E"
        />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@+id/user_name_text_view"
                android:text="Status:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#393A39"
                android:paddingStart="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:drawableStart="@drawable/ic_about_icon"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/user_status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@+id/status_text"
                android:text="Life is a bed of Rose"
                android:layout_marginTop="0dp"
                android:textStyle="normal"
                android:textColor="#4B4E4B"
                android:paddingStart="36dp"
                android:paddingEnd="15dp"
                />



            <TextView
                android:id="@+id/info_text_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@+id/user_status_text_view"
                android:text="About :"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#393A39"
                android:paddingStart="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:drawableStart="@drawable/ic_about_icon"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/user_info_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@+id/info_text_heading"
                android:text="I am 20 Years old a beautiful girl. I am studing in Haldia Institute of Technology in third year."
                android:layout_marginTop="0dp"
                android:textStyle="normal"
                android:textColor="#4B4E4B"
                android:paddingStart="35dp"
                android:paddingEnd="15dp"
                />

            <TextView
                android:id="@+id/display_message_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_info_text_view"
                android:text="You are Friends now"
                android:textSize="18sp"
                android:textColor="#388E3C"
                android:textAlignment="center"
                android:layout_marginTop="35dp"
                android:textStyle="bold"
                />



            <Button
                android:id="@+id/friend_request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_shape"
                android:text="Send Friend Request"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_info_text_view"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/decline_request_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_shape3"
                android:text="Decline Request"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/friend_request_button"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:visibility="visible"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>