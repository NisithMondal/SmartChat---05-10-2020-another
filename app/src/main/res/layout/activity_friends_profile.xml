<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        />

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/profile_image_view"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:src="@drawable/default_user_icon"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="210dp"
         />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/profile_image_view"
        android:text="Nisith Mondal"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#237527"
        />

            <TextView
                android:id="@+id/user_status_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@+id/user_name_text_view"
                android:text="Status:  Life is a bed of Rose"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#4B4E4B"
                android:padding="15dp"
                />


            <Button
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_style"
                android:text="Send Friend Request"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_status_text_view"
                android:textSize="18sp"
                android:layout_marginTop="100dp"
                android:drawableEnd="@drawable/ic_send_icon"
                android:textAllCaps="false"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>